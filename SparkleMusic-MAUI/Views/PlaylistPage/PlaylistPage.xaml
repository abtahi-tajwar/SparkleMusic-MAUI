<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:container="clr-namespace:SparkleMusic_MAUI.UIComponent.Container"
             xmlns:local="clr-namespace:SparkleMusic_MAUI.Views.PlaylistPage"
             xmlns:model="clr-namespace:SparkleMusic_MAUI.Module.Playlist.Entity"
             xmlns:navbar="clr-namespace:SparkleMusic_MAUI.UIComponent.Navbar"
             x:Class="SparkleMusic_MAUI.Views.PlaylistPage.PlaylistPage"
             x:DataType="local:PlaylistPageViewModel"
             Background="{StaticResource BackgroundPrimary}">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto, *">
            <navbar:Navbar Grid.Row="0" />

            <CollectionView Grid.Row="1" IsVisible="{Binding   !InitLoading}" VerticalOptions="Fill" ItemsLayout="VerticalGrid, 2"
                            ItemsSource="{Binding Playlists}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:PlaylistEntity">
                        <Border
                            Stroke="Transparent"
                            Margin="10"
                            StrokeShape="RoundRectangle 10">
                            <Grid
                                RowDefinitions="*, 50"
                                HeightRequest="150"
                                BackgroundColor="{StaticResource Accent}">
                                <Image Grid.RowSpan="2" Aspect="AspectFill" Source="t3.png" />
                                <Grid Grid.Row="1" Padding="5" BackgroundColor="{StaticResource Accent}">
                                    <Label Text="{Binding Title}" />
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <!-- <Grid BackgroundColor="Red" Grid.Row="1"> -->
            <!--     <ActivityIndicator -->
            <!--         IsVisible="{Binding !InitLoading}" -->
            <!--         VerticalOptions="Center" -->
            <!--         HorizontalOptions="Center" -->
            <!--         Color="White" -->
            <!--         HeightRequest="50" -->
            <!--         WidthRequest="50" /> -->
            <!-- </Grid> -->
        </Grid>
    </ContentPage.Content>
</ContentPage>