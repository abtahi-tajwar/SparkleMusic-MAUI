<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SparkleMusic_MAUI.Views.MainPage.MusicContextMenu">
    
    <!-- Content View Styles -->
    <ContentView.Resources>
        <Style x:Key="ImageButtons" TargetType="ImageButton">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="MaximumHeightRequest" Value="80" />
            <Setter Property="MaximumWidthRequest" Value="80" />
            <Setter Property="Padding" Value="15" />
        </Style>
    </ContentView.Resources>
    <!-- End Content View Styles -->
    <Border
        BackgroundColor="Black"
        StrokeShape="RoundRectangle 10"
        >
        <Grid ColumnDefinitions="Auto, Auto, Auto">
            <ImageButton 
                Grid.Column="0"
                Source="settings_icon.png"
                Style="{StaticResource ImageButtons}"
                />
            <ImageButton 
                Grid.Column="1"
                Source="settings_icon.png"
                Style="{StaticResource ImageButtons}"
                />
            <ImageButton 
                Grid.Column="2"
                Source="settings_icon.png"
                Style="{StaticResource ImageButtons}"
                />
        </Grid>
    </Border>
</ContentView>