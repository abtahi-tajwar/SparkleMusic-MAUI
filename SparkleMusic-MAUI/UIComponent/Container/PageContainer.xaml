<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:navbar="clr-namespace:SparkleMusic_MAUI.UIComponent.Navbar"
             xmlns:local="clr-namespace:SparkleMusic_MAUI.UIComponent.Container"
             x:Class="SparkleMusic_MAUI.UIComponent.Container.PageContainer"
             x:DataType="local:PageContainer"
             Background="{StaticResource BackgroundPrimary}"
             >
    <Grid RowDefinitions="Auto, *">
        <navbar:Navbar Grid.Row="0" />
        <!-- Placeholder for child content -->
        <ContentView Grid.Row="1" BackgroundColor="Bisque" x:Name="DummyContent" Content="{Binding ChildrenContent}"  />
    </Grid>
    
</ContentView>